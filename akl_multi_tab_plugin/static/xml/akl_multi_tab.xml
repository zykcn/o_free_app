<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="akl_multi_tab_plugin.multi_tab">
        <div class="akl_multi_tab">
            <div class="akl_tab_control akl_icon_prev">
                <svg viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                    <path d="M269.25 512l271.53-271.53a32 32 0 0 0-45.25-45.25L201.37 489.38a32 32 0 0 0 0 45.25l294.16 294.16a32 32 0 0 0 45.25-45.25z" fill="#adb5bd"/>
                    <path d="M551.1 512l271.53-271.53a32 32 0 0 0-45.26-45.25L483.22 489.38a32 32 0 0 0 0 45.25l294.15 294.16a32 32 0 1 0 45.26-45.25z" fill="#adb5bd"/>
                </svg>
            </div>
            <div class="akl_tab_control akl_icon_next">
                <svg viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                    <path d="M483.22 240.47L754.73 512 483.22 783.53a32 32 0 0 0 45.25 45.25l294.15-294.15a32 32 0 0 0 0-45.26L528.47 195.22a32 32 0 0 0-45.25 45.25z" fill="#adb5bd"/>
                    <path d="M540.78 534.63a32 32 0 0 0 0-45.26L246.63 195.22a32 32 0 0 0-45.25 45.25L472.89 512 201.38 783.53a32 32 0 0 0 45.25 45.25z" fill="#adb5bd"/>
                </svg>
            </div>

            <div class="dropdown akl_tab_control akl_icon_down">
                <div data-toggle="dropdown">
                    <svg viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                        <path  fill="#adb5bd" d="M830.24 340.688l11.328 11.312a16 16 0 0 1 0 22.624L530.448 685.76a16 16 0 0 1-22.64 0L196.688 374.624a16 16 0 0 1 0-22.624l11.312-11.312a16 16 0 0 1 22.624 0l288.496 288.496 288.512-288.496a16 16 0 0 1 22.624 0z"/>
                    </svg>
                </div>
                <div class="dropdown-menu">
                    <a class="dropdown-item akl_close_cur_tab" href="#">close current tab</a>
                    <a class="dropdown-item akl_close_other_tabs" href="#">close other tabs</a>
                    <a class="dropdown-item akl_close_all_tabs" href="#">close all tabs</a>
                </div>
            </div>

            <div class="akl_tab_scroll_container">
                <ul class="akl_page_items tab_container" />
            </div>
        </div>
    </t>

    <t t-name="akl_multi_tab_plugin.multi_tab_page_item">
        <li class="akl_page_tab_item" t-attrf-data-action-id="{{action.jsID}}">
            <span><t t-esc="action.tab_title"/></span>
            <span class="akl_tab_close">
                <svg viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg"  width="14" height="14">
                    <path d="M556.8 512l265.6-265.6c12.8-12.8 12.8-32 0-44.8s-32-12.8-44.8 0L512 467.2 246.4 201.6c-12.8-12.8-32-12.8-44.8 0s-12.8 32 0 44.8l265.6 265.6-265.6 265.6c-12.8 12.8-12.8 32 0 44.8 6.4 6.4 12.8 9.6 22.4 9.6s16-3.2 22.4-9.6l265.6-265.6 265.6 265.6c6.4 6.4 16 9.6 22.4 9.6s16-3.2 22.4-9.6c12.8-12.8 12.8-32 0-44.8L556.8 512z" fill="#bfbfbf"/>
                </svg>
            </span>
        </li>
    </t>

</templates>
